<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Boom{% endblock %}</title>
        {% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="https://bootswatch.com/4/yeti/bootstrap.min.css">{% endblock %}
    </head>
    <body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary" id="nav">
            <h2 class="navbar-brand">Mon blog</h2>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('home') }}">Home <span class="sr-only">(current)</span></a>
                    </li>

                    {% if is_granted('ROLE_ADMIN') %}


                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('create') }}">Create <span class="sr-only">(current)</span></a>
                        </li>

                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('user_index') }}">All users <span class="sr-only">(current)</span></a>
                        </li>

                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('article_index') }}">All articles <span class="sr-only">(current)</span></a>
                        </li>

                    {% endif %}

                    {% if not app.user %}

                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('inscription') }}"> Registration <span class="sr-only">(current)</span></a>
                        </li>

                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('login') }}"> Login <span class="sr-only">(current)</span></a>
                        </li>


                    {% else %}

                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('logout') }}"> Logout <span class="sr-only">(current)</span></a>
                        </li>


                    {% endif %}

                </ul>

            </div>
        </nav>


    </header>

        {% block body %}{% endblock %}

        {% block javascripts %}{% endblock %}
    </body>
</html>





