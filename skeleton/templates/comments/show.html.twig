{% extends 'base.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

    <h1>Comments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ comment.author }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ comment.date ? comment.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('comments/_delete_form.html.twig') }}

    {% endif %}

{% endblock %}
